# Production Environment Variables Template
# Copy this file to .env.production and fill in your values
# Or set these as environment variables before running docker compose

# Domain Configuration
FRONTEND_URL=https://freelance-it.site
CORS_ORIGIN=https://freelance-it.site
NEXT_PUBLIC_API_URL=https://freelance-it.site/api/v1
NEXT_PUBLIC_SOCKET_URL=https://freelance-it.site

# Nginx Ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# App Configuration
NODE_ENV=production
PORT=5000

# Security Secrets (CHANGE THESE IN PRODUCTION!)
SYSTEM_SECRET=your-system-secret-here
JWT_SECRET=your-jwt-secret-here
HASHING_SECRET_KEY=your-hashing-secret-key-here

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRATION=1d
JWT_REFRESH_TOKEN_EXPIRATION=7d
BCRYPT_SALT_ROUNDS=12

# AWS Configuration
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
DYNAMODB_TABLE_PREFIX=exe201
S3_BUCKET_NAME=your-s3-bucket-name

# Email Configuration
SMTP_PASSWORD=your-smtp-password
SMTP_USER=your-smtp-user@example.com

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# DynamoDB Tables
USER_TABLE=users
DEVELOPER_PROFILE_TABLE=developer-profiles
PROJECT_TABLE=projects
PROJECT_TYPE_TABLE=project-types
CHATBOT_SESSION_TABLE=chatbot-sessions
CUSTOMER_PROFILE_TABLE=customer-profiles
APPLICATION_TABLE=applications
PROJECT_TEAM_TABLE=project-teams
PROJECT_FILE_TABLE=project-files
PLANNING_TABLE=planning
RATING_TABLE=ratings
USER_PLANNING_TABLE=user-plannings
PROJECT_TIMELINE_TABLE=project-timelines
TRANSACTION_HISTORY_TABLE=transaction-histories
PRODUCT_TABLE=products

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_HOST_URL=your-pinecone-host-url
PINECONE_INDEX_NAME=your-pinecone-index-name

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key
GEMINI_EMBEDDING_MODEL=text-embedding-004

# N8N Webhook
N8N_WEBHOOK_URL=your-n8n-webhook-url

# Casso Configuration
CASSO_API_KEY=your-casso-api-key
CASSO_BANK_ACCOUNT_ID=your-casso-bank-account-id
CASSO_WEBHOOK_SECRET=your-casso-webhook-secret
CASSO_WEBHOOK_URL=https://freelance-it.site/api/v1/casso/webhook

# PayOS Configuration
PAYOS_CLIENT_ID=your-payos-client-id
PAYOS_API_KEY=your-payos-api-key
PAYOS_CHECKSUM_KEY=your-payos-checksum-key
PAYOS_WEBHOOK_URL=https://freelance-it.site/api/v1/payos/webhook
PAYOS_RETURN_URL=https://freelance-it.site/planning/pricing/success
PAYOS_CANCEL_URL=https://freelance-it.site/planning/pricing

# Redis Configuration
REDIS_PASSWORD=your-redis-password-optional

